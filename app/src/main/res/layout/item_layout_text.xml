<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_shadow_end_color">

    <LinearLayout
        android:id="@+id/itemLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvSubreddit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"

            android:textSize="16sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"

            android:textSize="12sp"
            android:textStyle="normal">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingHorizontal="10sp"
            android:orientation="horizontal"
            android:background="#0001">

            <TextView
                android:id="@+id/tvUpvotes"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_round_arrow_upward_24"
                android:drawableRight="@drawable/ic_round_arrow_downward_24"
                android:layout_height="match_parent"
                android:paddingRight="40sp"
                android:layout_weight="0.333"
                android:text="1000"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/tvComments"
                android:drawableLeft="@drawable/ic_round_chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.333"
                android:text="Comments">
            </TextView>

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_round_reply_24"
                android:layout_marginRight="0dp"
                android:layout_weight="0.333"
                android:text="Share">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
